{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix src run build && npm --prefix functions run functionsBuild"
    ]
  },
  "hosting": {
    "predeploy": [
      "npm --prefix functions run hostingBuild"
    ],
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "ssrapp"
      }
    ]
  }
}